{
    "manifest_version": 2,
    "name": "Cacao",
    "version": "0.1.0",

    "description": "Cacao (CORS Access-Control-Allow-Origin) Proxy",
    "homepage_url": "https://github.com/michaelfig/cacao-extension",
    "icons": {
        "48": "cacao.svg",
        "96": "cacao.svg"
    },

    "applications": {
        "gecko": {
          "strict_min_version": "56.0a1"
        }
    },

    "permissions": [
        "http://127.0.0.1/*",
        "proxy",
        "webRequest",
        "webRequestBlocking"
    ],

    "background": {
        "scripts": [
            "browser-polyfill.min.js",
            "cacao-bg.js"
        ]
    }
}
